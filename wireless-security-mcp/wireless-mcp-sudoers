# /etc/sudoers.d/wireless-mcp-sudoers
# Restricted sudo access for wireless security MCP
# 
# INSTALLATION:
# sudo cp wireless-mcp-sudoers /etc/sudoers.d/
# sudo chmod 440 /etc/sudoers.d/wireless-mcp-sudoers
# sudo visudo -c

# Allow specific wireless commands without password
%wireless-security ALL=(root) NOPASSWD: /usr/sbin/airmon-ng check kill
%wireless-security ALL=(root) NOPASSWD: /usr/sbin/airmon-ng start wlan[0-9]*
%wireless-security ALL=(root) NOPASSWD: /usr/sbin/airmon-ng stop wlan[0-9]*mon
%wireless-security ALL=(root) NOPASSWD: /usr/local/sbin/airodump-ng *
%wireless-security ALL=(root) NOPASSWD: /usr/local/sbin/aireplay-ng *
%wireless-security ALL=(root) NOPASSWD: /usr/local/bin/kismet_server *
%wireless-security ALL=(root) NOPASSWD: /usr/sbin/wifite *

# Security restrictions
Defaults:%wireless-security secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Defaults:%wireless-security env_reset
Defaults:%wireless-security !targetpw
Defaults:%wireless-security !visiblepw

# Specific user rules (replace 'dell' with actual username)
dell ALL=(root) NOPASSWD: /usr/sbin/airmon-ng, /usr/local/sbin/airodump-ng, /usr/local/sbin/aireplay-ng, /usr/local/bin/kismet, /usr/sbin/wifite